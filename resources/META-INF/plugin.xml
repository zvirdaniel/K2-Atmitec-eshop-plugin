<idea-plugin>
    <id>cz.k2.eshop</id>
    <name>K2 E-Shop Integration</name>
    <version>1.7</version>
    <vendor email="Daniel.Zvir@k2.cz" url="http://www.k2.cz">K2 atmitec s.r.o.</vendor>

    <description><![CDATA[
      This plugin enables custom functionality used in our company when developing our eshop.<br>
      You can click-through file references in the GetTemplate function, and use file completion for all the files.<br>
      Various other useful features, such as translation assistance, are also implemented.<br>
    ]]></description>

    <change-notes><![CDATA[
      Translation references show values instead of translation codes. Status bar displays standard translations even if a special file is present.
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--Template Function-->
        <!-- Due to PHP not being recognised as a correct language in the completion contributor, validity checking for the following tag is suppressed. -->
        <!--suppress PluginXmlValidity -->
        <completion.contributor language="PHP" implementationClass="cz.k2.eshop.TemplateFunction.CompletionContributor"/>
        <psi.referenceContributor implementation="cz.k2.eshop.TemplateFunction.ReferenceContributor"/>

        <!--Translate Function-->
        <postStartupActivity implementation="cz.k2.eshop.TranslateFunction.TranslateDisplay"/>
        <psi.referenceContributor implementation="cz.k2.eshop.TranslateFunction.ReferenceContributor"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>